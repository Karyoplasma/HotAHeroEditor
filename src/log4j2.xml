<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configuration SYSTEM "log4j2.dtd">
<Configuration>
    <Appenders>
        <File name="File" fileName="HotAHeroEditor.log">
            <PatternLayout pattern="%d | %-5p | [%c{1}] - %m%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>